<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:padding="4dp">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/rl_domiantion"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/im_type_domiantion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/main_home"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/tv_status_domiantion"
                    android:layout_toRightOf="@+id/im_type_domiantion"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备号：2"/>

                <TextView
                        android:id="@+id/tv_equipment_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备名称：主楼顶电梯"/>


                <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址：重庆领鑫安地址"/>

                <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="具体地址：重庆喜百年酒店（南岸店)"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_status_domiantion"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="使用中"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
